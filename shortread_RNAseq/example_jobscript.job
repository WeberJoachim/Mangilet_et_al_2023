#!/bin/bash
#SBATCH --nodes=1                    
#SBATCH --ntasks=2                  
#SBATCH --mem=2G                  
#SBATCH --time=4-0:00                
#SBATCH --output=slurm.%j.out        
#SBATCH --error=slurm.%j.err          
